// Header...
header.stickyHeader
    nav.navBar
        //- Left Part of top Nav Bar containing the CICRCLE logo
        .leftOfNav
            a(href='/')
                img(src='/img/CircleLogo.jpg' alt='')
        //- Middle part of top nav bar that has actual page navigation -->
        .midMainNav
            ul 
                li: a(href='#') TEXTBOOKS
                li: a(href='#') NOTES
                li: a(href='#') ABOUT US
                li: a(href='#') CONTACT US
                li: input.navSearch(type='text' name='Search' placeholder='Search CIRCLE')
        //- Right part of top nav bar that has login and FAQ -->
        .rightOfNav
            //- img.navCTA.navHelp(src='/img/circle/outline_help_outline_black_48dp.png' alt='' )
            //- local variable defined in 'isLoggedIn' function...
            if user
                a(href='/me')
                    span.formatUser= user.name.split(' ')[0]
                    //- img.navCTA.ctaMenu(src='/img/circle/me.png' alt='')
                a(href='/logout')
                    img.navCTA.ctaMenu(src='/img/circle/logout.png' alt='')
            else
                a(href='/login')
                    img.navCTA#ctaLogin(src='/img/circle/login.png' alt='') 
                a(href='/signUp')
                    img.navCTA#ctaLogin(src='/img/circle/signup.png' alt='') 